{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "~/configs/*": [
        "./src/configs/*"
      ],
      "~/database/*": [
        "./src/database/*"
      ],
      "~/blossom/*": [
        "./src/blossom/*"
      ],
      "~/brawlers/*": [
        "./src/brawlers/*"
      ],
      "~/date/*": [
        "./src/date/*"
      ],
      "~/maps/*": [
        "./src/maps/*"
      ],
      "~/seasons/*": [
        "./src/seasons/*"
      ],
      "~/users/*": [
        "./src/users/*"
      ]
    }
  }
}
