{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./config/env/.development.env",
        "outDir": "./dist/"
      },
      {
        "include": "./config/env/.production.env",
        "outDir": "./dist/"
      }
    ]
  }
}
