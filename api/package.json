{
  "name": "brawltree-api",
  "private": true,
  "version": "1.0.0",
  "description": "Plant Brawl Tree",
  "scripts": {
    "start:dev": "node api-request.js",
    "start:pm2": "pm2 start ./ecosystem.config.cjs"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laetipark/brawltree-backend.git"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
